{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true, // 允许引入没有默认导出的模块
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["DOM", "ES2015", "es6", "es5"],
    "allowJs": true,
    "jsx": "react-native",
    "declaration": true,
    "declarationDir": "./lib",
    "outDir": "./lib",
    "rootDir": "./",
    "importHelpers": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["example", "node_modules", "dist", "lib"],
  "include": ["src", "typings.d.ts"]
}
